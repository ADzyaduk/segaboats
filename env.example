# Database Configuration
# Формат: postgresql://username:password@host:port/database?schema=public
DATABASE_URL=postgresql://boats:your_password_here@postgres:5432/boats2026?schema=public

# PostgreSQL (для docker-compose)
POSTGRES_USER=boats
POSTGRES_PASSWORD=your_postgres_password_here
POSTGRES_DB=boats2026

# Telegram Bot Configuration
# Получите токен у @BotFather в Telegram
TELEGRAM_BOT_TOKEN=your_telegram_bot_token_here
TELEGRAM_BOT_USERNAME=your_bot_username
# Секретный ключ для вебхука (любая случайная строка)
TELEGRAM_WEBHOOK_SECRET=your_webhook_secret_here

# n8n Configuration
# URL вебхука n8n для автоматизации
N8N_WEBHOOK_URL=https://your_domain_here/webhook
# API ключ n8n (создается в настройках n8n)
N8N_API_KEY=your_n8n_api_key_here

# n8n Docker Service (для docker-compose)
N8N_USER=admin
N8N_PASSWORD=your_n8n_password_here
N8N_HOST=your_domain_here

# Admin Panel
# Пароль для доступа к админ-панели
ADMIN_PASSWORD=your_admin_password_here

# Application
# URL вашего сайта (например: https://your_domain_here)
NUXT_PUBLIC_APP_URL=https://your_domain_here
NODE_ENV=production
